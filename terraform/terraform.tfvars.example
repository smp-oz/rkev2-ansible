# Example Terraform variables file
# Copy this to terraform.tfvars and customize for your environment

# AWS Configuration for Ohio region
aws_region = "us-east-2"
environment = "production"

# SSH Key Configuration (SMP-ANSIBLE key already exists in AWS)
aws_key_name = "SMP-ANSIBLE"

# Instance types
master_instance_type = "t3.large"
worker_instance_type = "t3.xlarge"
ansible_instance_type = "t3.medium"
cluster_name = "production-cluster"

# SSL Configuration for Rancher HTTPS
ssl_certificate_arn = "arn:aws:acm:us-east-2:082897116988:certificate/7bcb55cb-37ec-48c1-a25c-ff8bd85a0693"
domain_name = "rancher.smartcorex.com"

# Optional: SSL certificate ARN for HTTPS load balancer
# ssl_certificate_arn = "arn:aws:acm:us-east-2:123456789012:certificate/12345678-1234-1234-1234-123456789012"

# Optional: Domain name for Rancher
# domain_name = "rancher.yourdomain.com"